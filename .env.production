# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# This file is a template for production deployment.
# Copy this to .env and fill in your actual values.

# Server Configuration
NODE_ENV=production
PORT=3000

# PostgreSQL Configuration (Docker internal)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=quizdb
DB_USER=admin
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123

# MinIO Configuration (Docker internal)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=CHANGE_THIS_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_KEY_123
MINIO_BUCKET=quiz

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_FOR_JWT_SIGNING
JWT_EXPIRY=180d

# Admin Session
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_FOR_SESSIONS

# OTP Configuration
OTP_EXPIRY_MINUTES=5

# WhatsApp OTP Configuration
WHATSAPP_OTP_ENABLED=true
OTP_REQUIRE_ALL_METHODS=false

# Interakt WhatsApp API (Optional)
WHATSAPP_INTERAKT_ENABLED=true
INTERAKT_API_URL=https://api.interakt.ai/v1/public/message/
INTERAKT_SECRET_KEY=YOUR_ACTUAL_INTERAKT_SECRET_KEY_HERE
INTERAKT_TEMPLATE_NAME=otp_jnv_quiz_app

# n8n Webhook (Optional)
WHATSAPP_N8N_ENABLED=true
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/otp

# App Configuration
REFERRAL_BONUS_XP=50

# ==============================================
# IMPORTANT SECURITY NOTES:
# ==============================================
# 1. Generate strong random secrets for JWT_SECRET and SESSION_SECRET
#    Example: openssl rand -hex 32
# 2. Use strong passwords for DB_PASSWORD and MINIO credentials
# 3. Never commit this file to version control
# 4. Keep your Interakt and n8n credentials secure
# ==============================================
