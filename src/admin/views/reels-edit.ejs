<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Reel - JNV Quiz Admin</title>
    <%- include('partials/head') %>
    <style>
        .edit-container {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 30px;
        }
        .video-preview {
            position: sticky;
            top: 20px;
        }
        .video-preview video {
            width: 100%;
            max-height: 500px;
            background: #000;
            border-radius: 10px;
        }
        .stats-row {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
            margin-top: 15px;
        }
        .stat-item {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
        }
        .stat-item strong {
            display: block;
            font-size: 18px;
            color: #333;
        }
        .stat-item small {
            color: #666;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        .toggle-switch {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .toggle-switch input[type="checkbox"] {
            width: 50px;
            height: 26px;
            appearance: none;
            background: #ccc;
            border-radius: 13px;
            position: relative;
            cursor: pointer;
            transition: background 0.3s;
        }
        .toggle-switch input[type="checkbox"]:checked {
            background: #28a745;
        }
        .toggle-switch input[type="checkbox"]::before {
            content: '';
            position: absolute;
            width: 22px;
            height: 22px;
            background: #fff;
            border-radius: 50%;
            top: 2px;
            left: 2px;
            transition: transform 0.3s;
        }
        .toggle-switch input[type="checkbox"]:checked::before {
            transform: translateX(24px);
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h1>Edit Reel #<%= reel.id %></h1>
            <a href="/admin/reels" class="btn" style="background: #6c757d;">Back to Reels</a>
        </div>

        <% if (message) { %>
            <div class="success"><%= message %></div>
        <% } %>
        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>

        <div class="edit-container">
            <!-- Video Preview -->
            <div class="video-preview">
                <video controls>
                    <source src="<%= reel.video_url %>" type="video/mp4">
                </video>
                <div class="stats-row">
                    <div class="stat-item">
                        <strong><%= reel.total_views %></strong>
                        <small>Views</small>
                    </div>
                    <div class="stat-item">
                        <strong><%= reel.total_completions %></strong>
                        <small>Completions</small>
                    </div>
                    <div class="stat-item">
                        <strong><%= reel.total_hearts %></strong>
                        <small>Hearts</small>
                    </div>
                    <div class="stat-item">
                        <strong><%= reel.duration_seconds %>s</strong>
                        <small>Duration</small>
                    </div>
                </div>
                <p style="margin-top: 15px; font-size: 12px; color: #666;">
                    Created: <%= new Date(reel.created_at).toLocaleString() %>
                </p>
            </div>

            <!-- Edit Form -->
            <div class="card">
                <h2>Edit Details</h2>

                <form method="POST" action="/admin/reels/<%= reel.id %>/update">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" value="<%= reel.title || '' %>" placeholder="Enter reel title">
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="4" placeholder="Enter description"><%= reel.description || '' %></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="category">Category</label>
                            <select id="category" name="category">
                                <option value="education" <%= reel.category === 'education' ? 'selected' : '' %>>Education</option>
                                <option value="motivation" <%= reel.category === 'motivation' ? 'selected' : '' %>>Motivation</option>
                                <option value="tips" <%= reel.category === 'tips' ? 'selected' : '' %>>Tips & Tricks</option>
                                <option value="news" <%= reel.category === 'news' ? 'selected' : '' %>>News</option>
                                <option value="other" <%= reel.category === 'other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="duration_seconds">Duration (seconds)</label>
                            <input type="number" id="duration_seconds" name="duration_seconds" value="<%= reel.duration_seconds %>" min="0">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="tags">Tags (comma-separated)</label>
                        <input type="text" id="tags" name="tags" value="<%= reel.tags ? reel.tags.join(', ') : '' %>" placeholder="e.g., math, algebra, tips">
                    </div>

                    <div class="form-group">
                        <label>Status</label>
                        <div class="toggle-switch">
                            <input type="checkbox" id="is_active" name="is_active" value="true" <%= reel.is_active ? 'checked' : '' %>>
                            <label for="is_active"><%= reel.is_active ? 'Active' : 'Inactive' %></label>
                        </div>
                        <small style="color: #666;">Inactive reels won't appear in user feeds</small>
                    </div>

                    <div style="margin-top: 30px; display: flex; gap: 15px;">
                        <button type="submit">Save Changes</button>
                        <a href="/admin/reels" class="btn" style="background: #6c757d;">Cancel</a>
                    </div>
                </form>

                <hr style="margin: 30px 0;">

                <h3 style="color: #dc3545;">Danger Zone</h3>
                <p style="color: #666; margin-bottom: 15px;">
                    Deleting a reel will remove it permanently and all associated user progress data.
                </p>
                <button onclick="deleteReel()" style="background: #dc3545;">Delete This Reel</button>
            </div>
        </div>
    </div>

    <script>
        function deleteReel() {
            if (!confirm('Are you sure you want to delete this reel? This action cannot be undone.')) return;

            fetch('/admin/reels/<%= reel.id %>', { method: 'DELETE' })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/admin/reels?message=Reel deleted successfully';
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(err => alert('Error: ' + err.message));
        }

        // Update label when checkbox changes
        document.getElementById('is_active').addEventListener('change', function() {
            this.nextElementSibling.textContent = this.checked ? 'Active' : 'Inactive';
        });
    </script>
</body>
</html>
