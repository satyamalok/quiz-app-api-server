<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Questions - JNV Quiz Admin</title>
    <%- include('partials/head') %>
    <style>
        .filters {
            display: grid;
            grid-template-columns: 150px 200px 1fr auto;
            gap: 10px;
            margin-bottom: 20px;
        }
        .question-text {
            max-width: 250px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .actions button {
            padding: 5px 10px;
            margin-right: 5px;
            font-size: 12px;
        }
        .pagination {
            margin-top: 20px;
            text-align: center;
        }
        .pagination a {
            display: inline-block;
            padding: 8px 12px;
            margin: 0 2px;
            border: 1px solid #ddd;
            border-radius: 3px;
            text-decoration: none;
            color: #333;
        }
        .pagination a.active {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }
        .img-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;
            background: #e3f2fd;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 5px;
        }
        .img-icon:hover {
            background: #bbdefb;
        }
        .img-icon.explanation {
            background: #fff3e0;
        }
        .img-icon.explanation:hover {
            background: #ffe0b2;
        }
        .options-cell {
            font-size: 11px;
            max-width: 300px;
        }
        .option-item {
            display: inline-block;
            padding: 2px 6px;
            margin: 1px;
            border-radius: 3px;
            background: #f5f5f5;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 70px;
        }
        .option-item.correct {
            background: #c8e6c9;
            color: #2e7d32;
            font-weight: 600;
        }
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.8);
        }
        .modal-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 90%;
            max-height: 90%;
        }
        .modal-content img {
            max-width: 100%;
            max-height: 85vh;
            border-radius: 8px;
        }
        .modal-close {
            position: absolute;
            top: 15px;
            right: 25px;
            color: white;
            font-size: 35px;
            font-weight: bold;
            cursor: pointer;
        }
        .modal-close:hover {
            color: #ccc;
        }
        .has-image {
            color: #1976d2;
        }
        .no-image {
            color: #999;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container">
        <h1>Manage Questions (<%= pagination.totalQuestions %> total)</h1>

        <div class="card">
            <form method="GET" action="/admin/questions" class="filters">
                <input type="number" name="level" placeholder="Level" value="<%= filters.level || '' %>" min="1">
                <input type="text" name="subject" placeholder="Subject" value="<%= filters.subject || '' %>">
                <input type="text" name="search" placeholder="Search question text" value="<%= filters.search || '' %>">
                <button type="submit">Filter</button>
            </form>

            <% if (questions.length > 0) { %>
                <div style="margin-bottom: 15px;">
                    <button onclick="deleteSelected()" style="background: #dc3545; padding: 8px 15px;">Delete Selected</button>
                    <span id="selectedCount" style="margin-left: 10px; color: #666;"></span>
                </div>
            <% } %>

            <table>
                <thead>
                    <tr>
                        <th style="width: 40px;">
                            <input type="checkbox" id="selectAll" onchange="toggleSelectAll()">
                        </th>
                        <th style="width: 50px;">Level</th>
                        <th style="width: 50px;">Order</th>
                        <th style="width: 60px;">Images</th>
                        <th>Question</th>
                        <th style="width: 280px;">Options</th>
                        <th style="width: 80px;">Subject</th>
                        <th style="width: 140px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (questions.length === 0) { %>
                        <tr>
                            <td colspan="8" style="text-align: center;">No questions found</td>
                        </tr>
                    <% } else { %>
                        <% questions.forEach(q => {
                            // Parse options and find correct answer
                            const options = [q.option_1, q.option_2, q.option_3, q.option_4];
                            const correctIndex = options.findIndex(opt => opt && opt.startsWith('@'));
                        %>
                            <tr>
                                <td>
                                    <input type="checkbox" class="question-checkbox" value="<%= q.sl %>" onchange="updateSelectedCount()">
                                </td>
                                <td><%= q.level %></td>
                                <td><%= q.question_order %></td>
                                <td>
                                    <% if (q.question_image_url) { %>
                                        <span class="img-icon has-image" onclick="showImage('<%= q.question_image_url %>')" title="View question image">Q</span>
                                    <% } else { %>
                                        <span class="img-icon no-image" title="No question image">Q</span>
                                    <% } %>
                                    <% if (q.explanation_url) { %>
                                        <span class="img-icon explanation has-image" onclick="showImage('<%= q.explanation_url %>')" title="View explanation image">E</span>
                                    <% } else { %>
                                        <span class="img-icon explanation no-image" title="No explanation image">E</span>
                                    <% } %>
                                </td>
                                <td class="question-text" title="<%= q.question_text || 'Image only question' %>">
                                    <%= q.question_text || '<em style="color:#999;">Image only</em>' %>
                                </td>
                                <td class="options-cell">
                                    <% options.forEach((opt, i) => {
                                        const isCorrect = i === correctIndex;
                                        const cleanOpt = opt ? opt.replace(/^@/, '') : '';
                                        const truncated = cleanOpt.length > 12 ? cleanOpt.substring(0, 12) + '...' : cleanOpt;
                                    %>
                                        <span class="option-item <%= isCorrect ? 'correct' : '' %>" title="<%= cleanOpt %>">
                                            <%= (i + 1) %>. <%= truncated %>
                                        </span>
                                    <% }) %>
                                </td>
                                <td><%= q.subject || '-' %></td>
                                <td class="actions">
                                    <a href="/admin/questions/<%= q.sl %>/edit" class="btn" style="padding: 5px 10px; font-size: 12px;">Edit</a>
                                    <button onclick="deleteQuestion(<%= q.sl %>)" style="background: #dc3545;">Del</button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>

            <% if (pagination.totalPages > 1) { %>
                <div class="pagination">
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <a href="?page=<%= i %>&level=<%= filters.level || '' %>&subject=<%= filters.subject || '' %>&search=<%= filters.search || '' %>"
                           class="<%= i === pagination.currentPage ? 'active' : '' %>">
                            <%= i %>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Image Preview Modal -->
    <div id="imageModal" class="modal" onclick="closeModal()">
        <span class="modal-close" onclick="closeModal()">&times;</span>
        <div class="modal-content">
            <img id="modalImage" src="" alt="Preview">
        </div>
    </div>

    <script>
        function showImage(url) {
            document.getElementById('modalImage').src = url;
            document.getElementById('imageModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('imageModal').style.display = 'none';
        }

        // Close modal on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeModal();
        });

        function deleteQuestion(id) {
            if (!confirm('Are you sure you want to delete this question?')) return;

            fetch(`/admin/questions/${id}`, {
                method: 'DELETE'
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Question deleted successfully');
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(err => alert('Error deleting question'));
        }

        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.question-checkbox');
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
            updateSelectedCount();
        }

        function updateSelectedCount() {
            const checkboxes = document.querySelectorAll('.question-checkbox:checked');
            const count = checkboxes.length;
            const countDisplay = document.getElementById('selectedCount');
            if (count > 0) {
                countDisplay.textContent = `${count} question(s) selected`;
            } else {
                countDisplay.textContent = '';
            }
        }

        function deleteSelected() {
            const checkboxes = document.querySelectorAll('.question-checkbox:checked');
            const ids = Array.from(checkboxes).map(cb => cb.value);

            if (ids.length === 0) {
                alert('Please select at least one question to delete');
                return;
            }

            if (!confirm(`Are you sure you want to delete ${ids.length} question(s)? This action cannot be undone.`)) {
                return;
            }

            fetch('/admin/questions/bulk-delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ ids })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert(`Successfully deleted ${data.deletedCount} question(s)`);
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(err => alert('Error deleting questions'));
        }
    </script>
</body>
</html>
