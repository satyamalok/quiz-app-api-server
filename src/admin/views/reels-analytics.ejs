<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reels Analytics - JNV Quiz Admin</title>
    <%- include('partials/head') %>
    <style>
        /* Overview Cards */
        .overview-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }
        .overview-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            padding: 25px;
            border-radius: 12px;
        }
        .overview-card.views { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
        .overview-card.completions { background: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%); }
        .overview-card.hearts { background: linear-gradient(135deg, #f953c6 0%, #b91d73 100%); }
        .overview-card h2 {
            margin: 0;
            font-size: 36px;
        }
        .overview-card p {
            margin: 5px 0 0;
            opacity: 0.9;
        }
        .overview-card small {
            opacity: 0.8;
        }

        /* Section Grid */
        .section-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        /* Ranking Tables */
        .rank-table {
            width: 100%;
        }
        .rank-table th, .rank-table td {
            padding: 10px;
            text-align: left;
        }
        .rank-badge {
            display: inline-block;
            width: 24px;
            height: 24px;
            line-height: 24px;
            text-align: center;
            border-radius: 50%;
            background: #e9ecef;
            font-weight: bold;
            font-size: 12px;
        }
        .rank-badge.gold { background: #ffc107; color: #000; }
        .rank-badge.silver { background: #adb5bd; color: #fff; }
        .rank-badge.bronze { background: #cd7f32; color: #fff; }

        /* Category Stats */
        .category-bar {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        .category-name {
            width: 100px;
            font-weight: bold;
        }
        .category-progress {
            flex: 1;
            height: 25px;
            background: #e9ecef;
            border-radius: 5px;
            overflow: hidden;
            margin: 0 15px;
        }
        .category-fill {
            height: 100%;
            background: linear-gradient(90deg, #007bff, #6610f2);
            border-radius: 5px;
        }
        .category-count {
            width: 80px;
            text-align: right;
            color: #666;
        }

        /* User Table */
        .user-avatar {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: #007bff;
            color: #fff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            margin-right: 8px;
        }

        /* Video thumbnail */
        .mini-thumb {
            width: 60px;
            height: 35px;
            object-fit: cover;
            border-radius: 4px;
            background: #000;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h1>Reels Analytics</h1>
            <a href="/admin/reels" class="btn" style="background: #6c757d;">Back to Reels</a>
        </div>

        <!-- Overview Stats -->
        <div class="overview-grid">
            <div class="overview-card">
                <h2><%= overall.total_reels %></h2>
                <p>Total Reels</p>
                <small><%= overall.active_reels %> active</small>
            </div>
            <div class="overview-card views">
                <h2><%= parseInt(overall.total_views).toLocaleString() %></h2>
                <p>Total Views</p>
            </div>
            <div class="overview-card completions">
                <h2><%= parseInt(overall.total_completions).toLocaleString() %></h2>
                <p>Completions</p>
                <small><%= overall.overall_completion_rate %>% rate</small>
            </div>
            <div class="overview-card hearts">
                <h2><%= parseInt(overall.total_hearts).toLocaleString() %></h2>
                <p>Total Hearts</p>
            </div>
        </div>

        <div class="section-grid">
            <!-- Top by Views -->
            <div class="card">
                <h2>Top Reels by Views</h2>
                <table class="rank-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Reel</th>
                            <th>Views</th>
                            <th>Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topByViews.forEach((reel, i) => { %>
                            <tr>
                                <td>
                                    <span class="rank-badge <%= i === 0 ? 'gold' : i === 1 ? 'silver' : i === 2 ? 'bronze' : '' %>">
                                        <%= i + 1 %>
                                    </span>
                                </td>
                                <td>
                                    <video class="mini-thumb" muted>
                                        <source src="<%= reel.video_url %>" type="video/mp4">
                                    </video>
                                    <%= reel.title || 'Reel #' + reel.id %>
                                </td>
                                <td><strong><%= reel.total_views %></strong></td>
                                <td><%= reel.completion_rate %>%</td>
                            </tr>
                        <% }) %>
                        <% if (topByViews.length === 0) { %>
                            <tr><td colspan="4" style="text-align: center;">No data yet</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Top by Hearts -->
            <div class="card">
                <h2>Most Hearted Reels</h2>
                <table class="rank-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Reel</th>
                            <th>Hearts</th>
                            <th>Views</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topByHearts.forEach((reel, i) => { %>
                            <tr>
                                <td>
                                    <span class="rank-badge <%= i === 0 ? 'gold' : i === 1 ? 'silver' : i === 2 ? 'bronze' : '' %>">
                                        <%= i + 1 %>
                                    </span>
                                </td>
                                <td>
                                    <video class="mini-thumb" muted>
                                        <source src="<%= reel.video_url %>" type="video/mp4">
                                    </video>
                                    <%= reel.title || 'Reel #' + reel.id %>
                                </td>
                                <td><strong><%= reel.total_hearts %></strong></td>
                                <td><%= reel.total_views %></td>
                            </tr>
                        <% }) %>
                        <% if (topByHearts.length === 0) { %>
                            <tr><td colspan="4" style="text-align: center;">No data yet</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="section-grid">
            <!-- Best Completion Rate -->
            <div class="card">
                <h2>Best Completion Rate</h2>
                <p style="color: #666; margin-bottom: 15px;">Minimum 10 views to qualify</p>
                <table class="rank-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Reel</th>
                            <th>Rate</th>
                            <th>Views</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topByCompletion.forEach((reel, i) => { %>
                            <tr>
                                <td>
                                    <span class="rank-badge <%= i === 0 ? 'gold' : i === 1 ? 'silver' : i === 2 ? 'bronze' : '' %>">
                                        <%= i + 1 %>
                                    </span>
                                </td>
                                <td><%= reel.title || 'Reel #' + reel.id %></td>
                                <td><strong><%= reel.completion_rate %>%</strong></td>
                                <td><%= reel.total_views %></td>
                            </tr>
                        <% }) %>
                        <% if (topByCompletion.length === 0) { %>
                            <tr><td colspan="4" style="text-align: center;">Not enough data yet</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Category Breakdown -->
            <div class="card">
                <h2>Category Breakdown</h2>
                <% const maxViews = Math.max(...categoryStats.map(c => parseInt(c.views) || 0), 1); %>
                <% categoryStats.forEach(cat => { %>
                    <div class="category-bar">
                        <span class="category-name"><%= cat.category %></span>
                        <div class="category-progress">
                            <div class="category-fill" style="width: <%= (parseInt(cat.views) / maxViews * 100) %>%"></div>
                        </div>
                        <span class="category-count"><%= cat.count %> reels</span>
                    </div>
                <% }) %>
                <% if (categoryStats.length === 0) { %>
                    <p style="text-align: center; color: #666;">No categories yet</p>
                <% } %>
            </div>
        </div>

        <!-- Top Users -->
        <div class="card">
            <h2>Top Users by Engagement</h2>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User</th>
                        <th>Reels Viewed</th>
                        <th>Completed</th>
                        <th>Hearts Given</th>
                        <th>Watch Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% topUsers.forEach((user, i) => { %>
                        <tr>
                            <td>
                                <span class="rank-badge <%= i === 0 ? 'gold' : i === 1 ? 'silver' : i === 2 ? 'bronze' : '' %>">
                                    <%= i + 1 %>
                                </span>
                            </td>
                            <td>
                                <span class="user-avatar"><%= (user.name || user.phone).charAt(0).toUpperCase() %></span>
                                <%= user.name || user.phone %>
                            </td>
                            <td><%= user.reels_viewed %></td>
                            <td><%= user.reels_completed %></td>
                            <td><%= user.hearts_given %></td>
                            <td><%= Math.round(user.total_watch_time / 60) %> min</td>
                        </tr>
                    <% }) %>
                    <% if (topUsers.length === 0) { %>
                        <tr><td colspan="6" style="text-align: center;">No user data yet</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Recent Activity -->
        <div class="card">
            <h2>Daily Activity (Last 7 Days)</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>New Views</th>
                        <th>Completions</th>
                    </tr>
                </thead>
                <tbody>
                    <% dailyActivity.forEach(day => { %>
                        <tr>
                            <td><%= new Date(day.date).toLocaleDateString() %></td>
                            <td><%= day.new_views %></td>
                            <td><%= day.completions %></td>
                        </tr>
                    <% }) %>
                    <% if (dailyActivity.length === 0) { %>
                        <tr><td colspan="3" style="text-align: center;">No activity data yet</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
