<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Question - JNV Quiz Admin</title>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container">
        <h1>Edit Question #<%= question.sl %></h1>

        <% if (message) { %>
            <div class="success"><%= message %></div>
        <% } %>
        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>

        <div class="card">
            <form method="POST" action="/admin/questions/<%= question.sl %>/update" enctype="multipart/form-data">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label for="level">Level *</label>
                        <input type="number" id="level" name="level" value="<%= question.level %>" min="1" required>
                    </div>

                    <div class="form-group">
                        <label for="question_order">Question Order *</label>
                        <input type="number" id="question_order" name="question_order" value="<%= question.question_order %>" min="1" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="question_text">Question Text *</label>
                    <textarea id="question_text" name="question_text" rows="3" required><%= question.question_text || '' %></textarea>
                </div>

                <div class="form-group">
                    <label for="question_image">Question Image</label>
                    <% if (question.question_image_url) { %>
                        <div style="margin-bottom: 10px;">
                            <img src="<%= question.question_image_url %>" alt="Question image" style="max-width: 300px; border: 1px solid #ddd; border-radius: 5px;">
                            <p style="font-size: 12px; color: #666;">Current image (upload new to replace)</p>
                        </div>
                    <% } %>
                    <input type="file" id="question_image" name="question_image" accept="image/*">
                    <small style="color: #666;">Upload new image to replace current (stored in MinIO questions/ folder)</small>
                </div>

                <%
                    // Find correct option
                    const options = [question.option_1, question.option_2, question.option_3, question.option_4];
                    const correctIndex = options.findIndex(opt => opt && opt.startsWith('@'));
                    const cleanOptions = options.map(opt => opt ? opt.replace(/^@/, '') : '');
                %>

                <div class="form-group">
                    <label>Options * (Select correct answer)</label>

                    <div style="margin-bottom: 10px;">
                        <input type="radio" name="correct_option" value="1" id="correct_1" <%= correctIndex === 0 ? 'checked' : '' %> required>
                        <input type="text" name="option_1" value="<%= cleanOptions[0] %>" placeholder="Option 1" required style="width: calc(100% - 30px); margin-left: 5px;">
                    </div>

                    <div style="margin-bottom: 10px;">
                        <input type="radio" name="correct_option" value="2" id="correct_2" <%= correctIndex === 1 ? 'checked' : '' %> required>
                        <input type="text" name="option_2" value="<%= cleanOptions[1] %>" placeholder="Option 2" required style="width: calc(100% - 30px); margin-left: 5px;">
                    </div>

                    <div style="margin-bottom: 10px;">
                        <input type="radio" name="correct_option" value="3" id="correct_3" <%= correctIndex === 2 ? 'checked' : '' %> required>
                        <input type="text" name="option_3" value="<%= cleanOptions[2] %>" placeholder="Option 3" required style="width: calc(100% - 30px); margin-left: 5px;">
                    </div>

                    <div style="margin-bottom: 10px;">
                        <input type="radio" name="correct_option" value="4" id="correct_4" <%= correctIndex === 3 ? 'checked' : '' %> required>
                        <input type="text" name="option_4" value="<%= cleanOptions[3] %>" placeholder="Option 4" required style="width: calc(100% - 30px); margin-left: 5px;">
                    </div>
                </div>

                <div class="form-group">
                    <label for="explanation_text">Explanation</label>
                    <textarea id="explanation_text" name="explanation_text" rows="3"><%= question.explanation_text || '' %></textarea>
                </div>

                <div class="form-group">
                    <label for="explanation_image">Explanation Image</label>
                    <% if (question.explanation_url) { %>
                        <div style="margin-bottom: 10px;">
                            <img src="<%= question.explanation_url %>" alt="Explanation image" style="max-width: 300px; border: 1px solid #ddd; border-radius: 5px;">
                            <p style="font-size: 12px; color: #666;">Current image (upload new to replace)</p>
                        </div>
                    <% } %>
                    <input type="file" id="explanation_image" name="explanation_image" accept="image/*">
                    <small style="color: #666;">Upload new image to replace current (stored in MinIO explanations/ folder)</small>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject" value="<%= question.subject || '' %>" placeholder="e.g., Math, GK, English">
                    </div>

                    <div class="form-group">
                        <label for="topic">Topic</label>
                        <input type="text" id="topic" name="topic" value="<%= question.topic || '' %>" placeholder="e.g., Algebra, Geography">
                    </div>

                    <div class="form-group">
                        <label for="difficulty">Difficulty</label>
                        <select id="difficulty" name="difficulty">
                            <option value="">Select</option>
                            <option value="easy" <%= question.difficulty === 'easy' ? 'selected' : '' %>>Easy</option>
                            <option value="medium" <%= question.difficulty === 'medium' ? 'selected' : '' %>>Medium</option>
                            <option value="hard" <%= question.difficulty === 'hard' ? 'selected' : '' %>>Hard</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="medium">Language Medium *</label>
                        <select id="medium" name="medium" required>
                            <option value="english" <%= question.medium === 'english' ? 'selected' : '' %>>English</option>
                            <option value="hindi" <%= question.medium === 'hindi' ? 'selected' : '' %>>Hindi</option>
                            <option value="both" <%= question.medium === 'both' ? 'selected' : '' %>>Both (Bilingual)</option>
                        </select>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <button type="submit">Update Question</button>
                    <a href="/admin/questions" class="btn" style="background: #999; margin-left: 10px;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
